<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PIsoftware" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_purple</item>
        <item name="colorPrimaryVariant">@color/grey_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_orange</item>
        <item name="colorSecondaryVariant">@color/red_orange</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="colorBackgroundFloating">@color/dark_grey_blue</item>
        <item name="android:windowBackground">@color/dark_grey</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBarOverlay">true</item>

    </style>


    <style name="CustomToolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="CustomBottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_color_night</item>
        <item name="itemTextColor">@color/bottom_nav_color_night</item>
    </style>

    <style name="CustomCircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat"></style>

    <style name="CustomTextAppearance.Display1" parent="CustomTextAppearance">
        <item name="android:textSize">@dimen/heading_font_size</item>
    </style>

    <style name="CustomTextAppearance.Body1" parent="CustomTextAppearance">
        <item name="android:textSize">@dimen/body_font_size</item>
    </style>

    <style name="GoalsCardView">
        <item name="cardBackgroundColor">#575757</item>
    </style>

    <style name="ProgressBarUnfilled">
        <item name="bgColor">#575757</item>
    </style>

    <style name="GoalsCardHeading">
        <item name="android:textColor">#FFFFFF</item>
    </style>


    <style name="FeedCardView">
        <item name="cardBackgroundColor">#575757</item>
    </style>
    <style name="FeedCardText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>